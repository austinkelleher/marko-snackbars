div [
    class=[
        'mn-snackbar',
        'transition-' + data.transitionDirection,
        data.initialPosition,
        data.animation,
        data.remove ? 'remove' : ''
    ]
    w-bind
]
    label class='mn-message'
        - ${data.message}
    button [
        if(data.allowText)
        class='mn-snack-button allow'
        w-onClick='handleAllow'
    ] - ${data.allowText}
    button [
        if(data.denyText)
        class='mn-snack-button deny'
        w-onClick='handleDeny'
    ] - ${data.denyText}
